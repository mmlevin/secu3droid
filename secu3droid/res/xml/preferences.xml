<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<ListPreference 
		android:dialogTitle="@string/pref_bluetooth_device_title"
		android:title="@string/pref_bluetooth_device_title" 
		android:key="@string/pref_bluetooth_device_key" 	
		android:summary="@string/pref_bluetooth_device_summary" />
	<ListPreference 
		android:dialogTitle="@string/pref_protocol_version_title"
		android:title="@string/pref_protocol_version_title" 
		android:key="@string/pref_protocol_version_key" 	
		android:summary="@string/pref_protocol_version_summary" />
	<CheckBoxPreference
	    android:key="@string/pref_binary_mode_key"
	    android:title="@string/pref_binary_mode_title"
	    android:defaultValue="false"
	    android:summary="@string/pref_binary_mode_summary"/>	
	<EditTextPreference
		android:key="@string/pref_connection_retries_key"
		android:title="@string/pref_connection_retries_title"
		android:defaultValue="@string/defaultConnectionRetries"
		android:inputType="numberDecimal"
		android:summary="@string/pref_connection_retries_summary" />
	<EditTextPreference 
	    android:key="@string/pref_speed_pulse_key"
	    android:title="@string/pref_speed_pulse_title"
	    android:defaultValue="@string/defaultSpeedPulse"	    
	    android:inputType="numberDecimal"/>
	<CheckBoxPreference
	    android:key="@string/pref_upload_immediately_key"
	    android:title="@string/pref_upload_immediately_title"
	    android:defaultValue="false"
	    android:summary="@string/pref_upload_immediately_summary"/>	
	<CheckBoxPreference
	    android:key="@string/pref_write_log_key"
	    android:title="@string/pref_write_log_title"
	    android:defaultValue="false" 
	    android:summary="@string/pref_write_log_summary"/>  
	<EditTextPreference 
	    android:key="@string/pref_write_log_path"
	    android:title="@string/pref_write_log_path_title"
	    android:summary="@string/pref_write_log_path_summary"/>  
	<CheckBoxPreference 
	    android:key="@string/pref_night_mode_key"
	    android:title="@string/pref_night_mode_title"
	    android:summary="@string/pref_night_mode_summary"/>
	<Preference
		android:key="@string/pref_about_key"
		android:persistent="false"
		android:title="@string/pref_about_title"
		android:summary="@string/pref_about_summary" />		
</PreferenceScreen>